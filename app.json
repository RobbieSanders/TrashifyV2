{
  "expo": {
    "name": "Trashify",
    "slug": "trashify",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Allow Trashify to access your location to show nearby pickups and navigate to properties.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "We use your location while the app is in use to show maps and routing."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "platforms": [
      "android",
      "ios",
      "web"
    ],
    "plugins": [
      "expo-location",
      "expo-maps"
    ]
  }
}
